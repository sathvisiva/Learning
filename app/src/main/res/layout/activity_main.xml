                      android:layout_below="@+id/textView2"
                      android:layout_alignLeft="@+id/textView2"
                      android:layout_alignStart="@+id/textView2"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:text="Journey Date"
                          android:id="@+id/textView"
                          android:layout_below="@+id/autoCompleteTextView2"
                          android:layout_alignLeft="@+id/autoCompleteTextView2"
                          android:layout_alignStart="@+id/autoCompleteTextView2"
                          android:layout_marginTop="20dp" />

                      <EditText
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/editText"
                          android:width="240dp"
                          android:layout_below="@+id/textView"
                          android:layout_alignLeft="@+id/textView"
                          android:layout_alignStart="@+id/textView"
                          android:editable="false"/>


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:text="Time"
                          android:id="@+id/textView3"
                          android:layout_below="@+id/editText"
                          android:layout_alignLeft="@+id/editText"
                          android:layout_alignStart="@+id/editText"
                          android:layout_marginTop="20dp" />

                      <Spinner
                          android:id="@+id/time"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/textView3"
                          android:layout_alignLeft="@+id/textView3"
                          android:layout_alignStart="@+id/textView3"
                          android:layout_alignRight="@+id/textView"
                          android:layout_alignEnd="@+id/textView"
                          android:layout_marginTop="20dp"/>

                      <Button
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Search"
                          android:id="@+id/button"
                          android:layout_below="@+id/time"
                          android:layout_toRightOf="@+id/textView3"
                          android:background="#00897B"
                          android:layout_alignRight="@+id/editText"
                          android:layout_alignEnd="@+id/editText"
                          android:textColor="@android:color/white"
                          android:gravity="center|center_vertical|center_horizontal"
                          android:layout_marginTop="40dp"
                          android:layout_marginLeft="-35dp" />-->
            </RelativeLayout>


        <FrameLayout
            android:id="@+id/first_spacer"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height"
            android:layout_below="@id/first_group_container"
            android:background="@android:color/transparent">

            <!--  <View
                  android:layout_width="fill_parent"
                  android:layout_height="@dimen/separator_height"
                  android:layout_gravity="top"
                  android:background="@drawable/divider_section_bottom"/>-->
        </FrameLayout>

            <LinearLayout
                android:id="@+id/second_group_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_group_container"
                android:layout_marginTop="@dimen/margin"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_gravity="top"
                />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/view_height"
                        android:background="@android:color/transparent"
                        />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/view_height"
                        android:background="@android:color/transparent"
                        />

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/view_height"
                        android:background="@android:color/transparent"
                        />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/second_spacer"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_height"
                android:layout_below="@id/second_group_container"
                android:background="#00897B"
                android:visibility="invisible">
<!--
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_gravity="top"
                    android:background="@drawable/divider_section_bottom"/>-->
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/edit_mode_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/view_height"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:background="@android:color/transparent">

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_gravity="top"
                android:background="@drawable/divider_section_top"/>

            <FrameLayout
                android:id="@+id/edit_mode_fragment_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00897B">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@android:color/transparent">

                <android.support.v7.widget.RecyclerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                </RelativeLayout>

                </FrameLayout>
        </RelativeLayout>
            </FrameLayout>


    </FrameLayout>






