<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="0dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="05:00 am"
            android:id="@+id/startTime"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/startTime"
            android:layout_toRightOf="@+id/startTime"
            android:layout_toEndOf="@+id/startTime"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12:00 pm (9 hrs)"
            android:id="@+id/departTime"
            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="908C"
            android:id="@+id/busNo"
            android:layout_below="@+id/startTime"
            android:layout_alignLeft="@+id/startTime"
            android:layout_alignStart="@+id/startTime"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="via salem"
            android:id="@+id/via"
            android:textColor="@android:color/darker_gray"
            android:layout_alignTop="@+id/serviceClass"
            android:layout_alignLeft="@+id/busNo"
            android:layout_alignStart="@+id/busNo"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ultra Deluxe"
            android:id="@+id/serviceClass"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/busNo"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Kumbakonam corp."
            android:id="@+id/corporation"
            android:layout_above="@+id/serviceClass"
            android:layout_alignLeft="@+id/departTime"
            android:layout_alignStart="@+id/departTime"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="35"
            android:id="@+id/seats"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/departTime"
            android:layout_toRightOf="@+id/departTime"
            android:layout_toEndOf="@+id/departTime" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="seats"
            android:id="@+id/textView10"
            android:textColor="@android:color/darker_gray"
            android:layout_alignBottom="@+id/departTime"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@+id/seats" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="500"
            android:id="@+id/fare"
            android:gravity="center_horizontal"
            android:background="@color/ColorPrimary"
            android:textColor="@android:color/white"
            android:layout_below="@+id/corporation"
            android:layout_alignLeft="@+id/seats"
            android:layout_alignStart="@+id/seats"
            android:layout_alignRight="@+id/textView10"
            android:layout_alignEnd="@+id/textView10" />

    </RelativeLayout>

</android.support.v7.widget.CardView>